{
	"$schema": "https://github.com/oxc-project/oxc/raw/refs/heads/main/npm/oxfmt/configuration_schema.json",
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 120,
	"endOfLine": "lf",
	"trailingComma": "all",
	"experimentalSortImports": {
		"plugins": ["typescript"]
	},
	"ignorePatterns": [
		"**/node_modules",
		"**/typescript/generated",
		"**/.unlighthouse"
	]
}