{
	"name": "ogma-3",
	"version": "beta",
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"webtypes": "bun ./scripts/webtypes.ts",
		"ctconfig": "bun ./scripts/generate-ctconfig.ts",
		"biome": "bunx biome check --write",
		"biome:report": "bun ./scripts/biome-check.ts",
		"css": "bun ./scripts/build-sass.ts",
		"css:lint": "bunx stylelint '**/*.scss'",
		"css:watch": "bun ./scripts/build-sass.ts -- --watch",
		"js": "bun ./scripts/build-js.ts",
		"js:watch": "bun ./scripts/build-js.ts -- --watch",
		"js:typecheck": "tsc --project ./typescript --noEmit",
		"icons": "bun ./scripts/build-icons.ts",
		"lh": "bunx unlighthouse",
		"build": "bun run css && bun run js && bun run webtypes && bun run icons"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commander-js/extra-typings": "^14.0.0",
		"@happy-dom/global-registrator": "^20.3.1",
		"@parcel/watcher": "^2.5.4",
		"@socketsecurity/bun-security-scanner": "^1.1.2",
		"@stylelint-types/stylelint-scss": "^6.11.0",
		"@types/ansi-colors": "^3.2.6",
		"@types/bun": "^1.3.6",
		"@types/json5": "^2.2.0",
		"@types/node": "^24.10.9",
		"@typescript/native-preview": "^7.0.0-dev.20260116.1",
		"baseline-browser-mapping": "^2.9.15",
		"browserslist": "^4.28.1",
		"chalk": "^5.6.2",
		"chalk-template": "^1.1.2",
		"cheerio": "^1.1.2",
		"commander": "^14.0.2",
		"convert": "^5.14.1",
		"dedent": "^1.7.1",
		"ejs": "^3.1.10",
		"esbuild": "^0.25.12",
		"gradient-string": "^3.0.0",
		"json5": "^2.2.3",
		"lighthouse": "^13.0.1",
		"lightningcss": "^1.30.2",
		"oxfmt": "^0.24.0",
		"oxlint": "^1.39.0",
		"sass-embedded": "^1.97.2",
		"sharp": "^0.34.5",
		"solid-labels": "^0.17.0",
		"stylelint": "^16.26.1",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-define-config": "^16.26.0",
		"utility-types": "^3.11.0",
		"zod": "^4.3.5"
	},
	"dependencies": {
		"@angius/tinytime": "^1.2.0",
		"@atulin/bun-plugin-solid": "npm:@jsr/atulin__bun-plugin-solid@1.3.0",
		"@atulin/html-sanitizer": "npm:@jsr/atulin__html-sanitizer@3.0.0",
		"@solid-primitives/destructure": "^0.2.2",
		"@solid-primitives/event-dispatcher": "^0.1.1",
		"@types/ejs": "^3.1.5",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"es-toolkit": "^1.44.0",
		"marked": "^17.0.1",
		"sa11y": "^4.4.1",
		"solid-element": "^1.9.1",
		"solid-js": "^1.9.10",
		"solid-signals": "^1.9.1",
		"uqr": "^0.1.2"
	},
	"web-types": [
		"./web-types.json"
	],
	"webtypesConfig": {
		"name": "Ogma Components",
		"version": "1.0.0",
		"framework": "solid",
		"description-markup": "markdown"
	}
