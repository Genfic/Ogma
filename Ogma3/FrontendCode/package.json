{
	"name": "ogma-3",
	"version": "beta",
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"webtypes": "bun ./scripts/webtypes.ts",
		"ctconfig": "bun ./scripts/generate-ctconfig.ts",
		"biome": "bunx biome check --write",
		"biome:report": "bunx biome check --max-diagnostics 500 *> biome.diag",
		"css": "bun ./scripts/build-sass.ts",
		"css:lint": "bunx stylelint '**/*.scss'",
		"css:watch": "bun ./scripts/build-sass.ts -- --watch",
		"js": "bun ./scripts/build-js.ts",
		"js:watch": "bun ./scripts/build-js.ts -- --watch",
		"js:typecheck": "tsc --project ./typescript --noEmit",
		"icons": "bun ./scripts/build-icons.ts",
		"lh": "unlighthouse",
		"build": "bun run css && bun run js && bun run wc && bun run icons"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"@commander-js/extra-typings": "^14.0.0",
		"@happy-dom/global-registrator": "^18.0.1",
		"@parcel/watcher": "^2.5.1",
		"@stylelint-types/stylelint-scss": "^6.11.0",
		"@types/ansi-colors": "^3.2.6",
		"@types/bun": "^1.2.18",
		"@types/json5": "^2.2.0",
		"@types/node": "^24.0.15",
		"browserslist": "^4.25.1",
		"chalk": "^5.4.1",
		"chalk-template": "^1.1.0",
		"commander": "^14.0.0",
		"convert": "^5.12.0",
		"dedent": "^1.6.0",
		"ejs": "^3.1.10",
		"esbuild": "^0.25.7",
		"gradient-string": "^3.0.0",
		"json5": "^2.2.3",
		"lighthouse": "^12.8.0",
		"lightningcss": "^1.30.1",
		"sass-embedded": "^1.89.2",
		"solid-labels": "^0.17.0",
		"stylelint": "^16.22.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-define-config": "^16.21.0",
		"typescript": "5.8.3",
		"unlighthouse": "^0.17.1",
		"utility-types": "^3.11.0",
		"vue": "2.6.14"
	},
	"dependencies": {
		"@angius/tinytime": "^1.2.0",
		"@atulin/bun-plugin-solid": "npm:@jsr/atulin__bun-plugin-solid",
		"@atulin/html-sanitizer": "npm:@jsr/atulin__html-sanitizer",
		"@solid-primitives/destructure": "^0.2.2",
		"@solid-primitives/event-dispatcher": "^0.1.1",
		"@types/ejs": "^3.1.5",
		"es-toolkit": "^1.39.7",
		"micromark": "^4.0.2",
		"micromark-extension-gfm-autolink-literal": "^2.1.0",
		"micromark-extension-gfm-strikethrough": "^2.1.0",
		"sa11y": "^4.1.9",
		"solid-element": "^1.9.1",
		"solid-js": "^1.9.7",
		"solid-signals": "^1.9.1",
		"uqr": "^0.1.2"
	},
	"web-types": [
		"./web-types.json"
	],
	"webtypesConfig": {
		"name": "Ogma Components",
		"version": "1.0.0",
		"framework": "solid",
		"description-markup": "markdown"
	}
}
