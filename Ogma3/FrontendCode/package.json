{
	"name": "ogma-3",
	"version": "beta",
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"webtypes": "bun ./scripts/webtypes.ts",
		"ctconfig": "bun ./scripts/generate-ctconfig.ts",
		"biome": "bunx @biomejs/biome check . --fix",
		"biome:report": "bunx @biomejs/biome check . --max-diagnostics 500 *> biome.diag",
		"css": "bun ./scripts/build-sass.ts",
		"css:lint": "bunx stylelint '**/*.scss'",
		"css:watch": "bun ./scripts/build-sass.ts -- --watch",
		"js": "bun ./scripts/build-js.ts",
		"js:watch": "bun ./scripts/build-js.ts -- --watch",
		"js:typecheck": "tsc --project ./typescript --noEmit",
		"wc": "bun ./scripts/build-solid.ts",
		"wc:watch": "bun ./scripts/build-solid.ts -- --watch",
		"icons": "bun ./scripts/build-icons.ts",
		"lh": "unlighthouse",
		"build": "bun run css && bun run js && bun run wc && bun run icons"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commander-js/extra-typings": "^13.1.0",
		"@hail2u/css-mqpacker": "git@github.com:hail2u/node-css-mqpacker.git#f615ec6",
		"@happy-dom/global-registrator": "^17.4.6",
		"@parcel/watcher": "^2.5.1",
		"@stylelint-types/stylelint-scss": "^6.11.0",
		"@types/ansi-colors": "^3.2.6",
		"@types/bun": "^1.2.12",
		"@types/json5": "^2.2.0",
		"@types/node": "^22.15.17",
		"browserslist": "^4.24.5",
		"chalk": "^5.4.1",
		"chalk-template": "^1.1.0",
		"commander": "^13.1.0",
		"convert": "^5.12.0",
		"dedent": "^1.6.0",
		"ejs": "^3.1.10",
		"esbuild": "^0.25.4",
		"gradient-string": "^3.0.0",
		"json5": "^2.2.3",
		"lighthouse": "^12.6.0",
		"lightningcss": "^1.29.3",
		"rollup": "^4.40.2",
		"rollup-plugin-esbuild": "6.2.1",
		"rollup-plugin-html-literals": "1.1.8",
		"rollup-plugin-tsconfig-paths": "^1.5.2",
		"sass-embedded": "^1.87.0",
		"stylelint": "^16.19.1",
		"stylelint-config-standard-scss": "^14.0.0",
		"stylelint-define-config": "^16.19.0",
		"typescript": "5.8.3",
		"unlighthouse": "^0.16.3",
		"vue": "2.6.14"
	},
	"dependencies": {
		"@angius/tinytime": "^1.1.0",
		"@atulin/bun-plugin-solid": "npm:@jsr/atulin__bun-plugin-solid",
		"@atulin/html-sanitizer": "npm:@jsr/atulin__html-sanitizer",
		"@solid-primitives/event-dispatcher": "^0.1.1",
		"@types/ejs": "^3.1.5",
		"es-toolkit": "^1.37.2",
		"micromark": "^4.0.2",
		"micromark-extension-gfm-autolink-literal": "^2.1.0",
		"micromark-extension-gfm-strikethrough": "^2.1.0",
		"sa11y": "^4.1.8",
		"solid-element": "^1.9.1",
		"solid-js": "^1.9.6",
		"uqr": "^0.1.2"
	},
	"web-types": ["./web-types.json"],
	"webtypesConfig": {
		"name": "Ogma Components",
		"version": "1.0.0",
		"framework": "solid",
		"description-markup": "markdown"
	}
}
