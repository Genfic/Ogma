{
	"compilerOptions": {
		"strict": true,
		"strictFunctionTypes": false,
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"useDefineForClassFields": false,
		"skipLibCheck": true,
		"lib": ["DOM", "ES6", "ES2023", "ESNext", "DOM.Iterable"],
		"importHelpers": true,
		"downlevelIteration": true,
		"baseUrl": "./",
		"typeRoots": ["./types"],
		"paths": {
			"@g/*": ["./generated/*"],
			"@h/*": ["./src-helpers/*"],
			"@t/*": ["./types/*"]
		},
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"resolveJsonModule": true
	},
	"exclude": ["tools", "src/sw"]
}
