{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Bundler",
		"useDefineForClassFields": false,
		"skipLibCheck": true,
		"lib": ["DOM", "ES6", "ES2021", "DOM.Iterable"],
		"importHelpers": true,
		"downlevelIteration": true,
		"baseUrl": "./",
		"typeRoots": ["./types"],
		"paths": {
			"@g/*": ["./generated/*"],
			"@h/*": ["./src-helpers/*"]
		},
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"exclude": ["node_modules", "tools", "src/sw"]
}
