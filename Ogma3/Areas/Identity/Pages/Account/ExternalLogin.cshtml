@page "/external-login"
@model ExternalLoginModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Associate your @Model.LoginProvider account.</h4>
<hr />

<p class="text-info">
	You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
	You can edit the username below and click the Connect button to finish
	logging in.
</p>

<div class="row">
	<div class="col-md-4">
		<form class="form" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="o-form-group">
				<label asp-for="Input.UserName">Username</label>
				<input asp-for="Input.UserName" class="o-form-control active-border" />
				<span asp-validation-for="Input.UserName" class="text-danger"></span>
			</div>

			@if (Model.Input.Email is null)
			{
				<div class="o-form-group">
					<label asp-for="Input.Email"></label>
					<p class="desc">The service you logged in with did not provide it.</p>
					<input asp-for="Input.Email" class="o-form-control active-border" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
			}

			<hr />

			<button type="submit" class="btn btn-primary">Connect</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}