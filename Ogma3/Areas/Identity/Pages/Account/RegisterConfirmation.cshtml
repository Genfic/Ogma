@page "/confirmation"
@inject IOptions<TurnstileSettings> TurnstileSettings
@using Microsoft.Extensions.Options
@using Ogma3.Services.TurnstileService
@model RegisterConfirmationModel
@{
	ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>

<p>
	Please check your email to confirm your account.
</p>

<form method="post">
	<input type="hidden" value="@Model.Email">
	
	<div class="cf-turnstile" data-sitekey="@TurnstileSettings.Value.SiteKey" data-action="register confirmation"></div>
	
	<button class="btn btn-primary">Resend email</button>
</form>

@section Scripts {
	<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
}