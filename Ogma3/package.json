{
    "devDependencies": {
        "@angius/web-component-analyzer": "2.0.10",
        "@hail2u/css-mqpacker": "github:hail2u/node-css-mqpacker#v8.0.1",
        "@mr-hope/gulp-sass": "3.1.0",
        "@rollup/plugin-image": "3.0.0",
        "@rollup/plugin-multi-entry": "5.0.0",
        "@rollup/plugin-node-resolve": "15.0.0",
        "@typescript-eslint/eslint-plugin": "5.40.1",
        "@typescript-eslint/parser": "5.40.1",
        "autoprefixer": "10.4.12",
        "esbuild": "0.14.39",
        "esbuild-minify-templates": "0.9.2",
        "esbuild-plugin-minify-html-literals": "1.0.1",
        "eslint": "8.25.0",
        "eslint-config-prettier": "8.5.0",
        "gulp": "4.0.2",
        "gulp-esbuild": "0.10.6",
        "gulp-if": "3.0.0",
        "gulp-postcss": "9.0.1",
        "gulp-rename": "2.0.0",
        "gulp-run": "1.7.1",
        "gulp-sourcemaps": "3.0.0",
        "gulp-terser": "2.1.0",
        "lighthouse": "9.6.7",
        "lit-web-types": "0.1.5",
        "npm-commands": "1.1.0",
        "postcss": "8.4.18",
        "postcss-csso": "6.0.1",
        "prettier": "2.7.1",
		"rollup": "2.78.0",
        "rollup-plugin-esbuild": "^4.9.1",
        "rollup-plugin-html-literals": "^1.1.5",
        "rollup-plugin-inline-svg": "^3.0.3",
        "tslib": "2.4.0",
        "typescript": "4.8.4",
        "vue": "2.6.14"
    },
    "scripts": {
        "build": "gulp all",
        "dev": "gulp watchAll",
        "score": "lighthouse https://localhost:5001 --view",
        "serve": "test-serve.bat",
        "t:webtypes": "wca-webtypes analyze ./wwwroot/js/src/**/*.ts --format webtypes --outFile ./web-types.json",
        "t:cssdemo": "deno run --allow-read --allow-net ./Tools/css-demo.ts",
        "t:preloads": "deno run --allow-read ./Tools/generate-preloads.ts",
        "t:imports": "deno run --allow-read ./Tools/generate-imports.ts",
        "t:bundlesize": "deno run --allow-read --unstable ./Tools/bundlesize.ts",
        "t:paths": "deno run --allow-net --unsafely-ignore-certificate-errors=localhost --allow-read --allow-write ./Tools/generate-paths.ts ./Ogma3/wwwroot/js/src/generated"
    },
    "name": "ogma-3",
    "dependencies": {
        "date-fns": "2.29.3",
        "dayjs": "1.11.6",
        "lit": "2.4.0",
        "lit-shared-state": "0.1.3"
    },
    "web-types": [
        "./web-types.json"
    ],
    "wca-config": {
        "webtypesConfig": {
            "name": "Ogma Components",
            "version": "1.0.0",
            "framework": "lit",
            "description-markup": "markdown"
        }
    }
}