{
	"name": "ogma-3",
	"sideEffects": false,
	"scripts": {
		"build": "gulp all",
		"dev": "gulp watchAll",
		"js:typecheck": "tsc --noEmit -p ./wwwroot/js/tsconfig.json",
		"t:webtypes": "wca-webtypes analyze ./wwwroot/js/src/**/*.ts --format webtypes --outFile ./web-types.json",
		"biome": "bunx @biomejs/biome check .",
		"biome:report": "bunx @biomejs/biome check . --max-diagnostics 500 *> biome.diag",
		"css": "bun ./scripts/build-sass.mts",
		"css:watch": "bun ./scripts/build-sass.mts -- --watch",
		"js": "bun ./scripts/build-js.mts",
		"js:watch": "bun ./scripts/build-js.mts -- --watch",
		"lh": "unlighthouse"
	},
	"devDependencies": {
		"@angius/web-component-analyzer": "2.0.10",
		"@biomejs/biome": "^1.9.4",
		"@hail2u/css-mqpacker": "git@github.com:hail2u/node-css-mqpacker.git#f615ec6",
		"@mr-hope/gulp-sass": "3.1.1",
		"@parcel/watcher": "^2.5.0",
		"@rollup/plugin-multi-entry": "6.0.1",
		"@rollup/plugin-node-resolve": "15.3.0",
		"@types/ansi-colors": "^3.2.6",
		"@types/bun": "^1.1.13",
		"@types/node": "^22.9.3",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"autoprefixer": "^10.4.20",
		"browserslist": "^4.24.2",
		"chalk": "^5.3.0",
		"chalk-template": "^1.1.0",
		"concurrently": "^9.1.0",
		"convert": "^5.6.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "9.1.0",
		"gradient-string": "^3.0.0",
		"gulp": "5.0.0",
		"gulp-esbuild": "^0.12.1",
		"gulp-postcss": "10.0.0",
		"gulp-sourcemaps": "3.0.0",
		"lighthouse": "^12.2.2",
		"lightningcss": "^1.28.1",
		"lit-web-types": "0.1.5",
		"npm-commands": "1.2.1",
		"picocolors": "^1.1.1",
		"postcss": "^8.4.49",
		"postcss-csso": "6.0.1",
		"prettier": "3.3.3",
		"rollup": "^4.27.4",
		"rollup-plugin-esbuild": "6.1.1",
		"rollup-plugin-html-literals": "1.1.8",
		"sass": "^1.81.0",
		"typescript": "5.6.2",
		"unlighthouse": "^0.13.5",
		"vue": "2.6.14"
	},
	"dependencies": {
		"@lit/task": "^1.0.1",
		"date-fns": "^4.1.0",
		"es-toolkit": "^1.27.0",
		"lit": "^3.2.1"
	},
	"web-types": ["./web-types.json"],
	"wca-config": {
		"webtypesConfig": {
			"name": "Ogma Components",
			"version": "1.0.0",
			"framework": "lit",
			"description-markup": "markdown"
		}
	}
}
