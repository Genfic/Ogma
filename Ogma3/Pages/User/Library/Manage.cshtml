@page "/user/{username}/library/manage"
@using Microsoft.AspNetCore.Antiforgery
@model ManageModel
@inject IAntiforgery Csrf

@{
	ViewData["Title"] = "Manage your library";
	ViewData["Tab"] = "Library";
	var csrf = Csrf.GetAndStoreTokens(HttpContext).RequestToken;
}

<partial name="Shared/Bars/_ProfileBar" model="Model.ProfileBar" csrf="@csrf" />

<o-shelves-management icons="@Model.IconsJson" user-name="@Model.ProfileBar.UserName"></o-shelves-management>

@section Scripts {
	<script type="module" src="~/js/manage-shelves.js" asp-append-version="true"></script>
}