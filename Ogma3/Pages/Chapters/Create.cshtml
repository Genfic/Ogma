@page "/story/{id}/add-chapter"
@model Ogma3.Pages.Chapters.CreateModel

@{
    ViewData["Title"] = "Create Chapter";
}

<h1>@ViewData["Title"]</h1>

<h4>New chapter for <em>@Model.Story.Title</em></h4>

<form class="form" id="chapter" method="post" v-on:submit="onSubmit">

    <div asp-validation-summary="All">
        <span>Please correct the following errors</span>
    </div>
    
    <div class="o-form-group">
        <label asp-for="Input.Title"></label>
        <input asp-for="Input.Title" class="o-form-control active-border">
        <span asp-validation-for="Input.Title"></span>
    </div>

    <div class="o-form-group">
        <label asp-for="Input.Body"></label>
        <textarea asp-for="Input.Body" class="o-form-control active-border" rows="20" data-wordcount="true"></textarea>
        <span asp-validation-for="Input.Body"></span>
    </div>
    
    <div class="o-form-group">
        <label asp-for="Input.StartNotes"></label>
        <textarea asp-for="Input.StartNotes" class="o-form-control active-border" rows="5"></textarea>
        <span asp-validation-for="Input.StartNotes"></span>
    </div>
    
    <div class="o-form-group">
        <label asp-for="Input.EndNotes"></label>
        <textarea asp-for="Input.EndNotes" class="o-form-control active-border" rows="5"></textarea>
        <span asp-validation-for="Input.EndNotes"></span>
    </div>
    
    <div class="o-form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
    
</form>


<partial name="Shared/_ValidationScriptsPartial"/>

@section Scripts { 
    <script src="~/js/dist/input-progressbars.min.js" asp-append-version="true"></script>
}

