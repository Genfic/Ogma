@page
@model DeleteModel

@{
	ViewData["Title"] = "Delete";
}

<h2>@Model.Chapter.Title</h2>
<div>
	<h3>Are you sure you want to delete this chapter?</h3>
	<hr/>

	<dl class="rows">
		<dt>
			Story:
		</dt>
		<dd>
			@Model.Chapter.StoryTitle
		</dd>
		<dt>
			Published on:
		</dt>
		<dd>
			@(Model.Chapter.PublishDate is not null ? Model.Chapter.PublishDate : "Not published")
		</dd>
		<dt>
			Comments:
		</dt>
		<dd>
			@Model.Chapter.CommentsThreadCommentsCount
		</dd>
		<dt>
			Words:
		</dt>
		<dd>
			@Model.Chapter.WordCount
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Chapter.Id"/>
		<div class="button-group">
			<input type="submit" value="Delete" class="btn red"/>
			<a asp-page="../Chapter" class="btn" asp-route-sid="@Model.Chapter.StoryId" asp-route-id="@Model.Chapter.Id" asp-route-slug="@Model.Chapter.Slug">Cancel</a>
		</div>
	</form>
</div>