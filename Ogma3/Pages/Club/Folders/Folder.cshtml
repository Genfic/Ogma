@page "/club/{clubId}/folder/{id}/{slug}"
@model Ogma3.Pages.Club.Folders.FolderModel


@{
    ViewData["Title"] = $"{Model.ClubBar.Name} â€” {Model.Folder.Name}";
    ViewData["Tab"] = "Stories";
}

<partial name="Shared/Bars/_ClubBar" model="@Model.ClubBar"/>

<h1>@Model.Folder.Name</h1>

<markdown preset="Basic">@Model.Folder.Description</markdown>

<span>Stories can be added by @Model.Folder.AccessLevel</span>

@if (Model.EditPermitted)
{
    <a asp-page="./Edit" asp-route-clubId="@Model.ClubBar.Id" asp-route-id="@Model.Folder.Id">Edit</a>
    <a asp-page="./Delete" asp-route-clubId="@Model.ClubBar.Id" asp-route-id="@Model.Folder.Id">Delete</a>
}

<hr>

<div class="folder-list tile-list">
    @foreach (var folder in Model.Folder.ChildFolders)
    {
        <partial name="Shared/Minimals/_FolderMinimal" model="folder"/>
    }
</div>

<hr>

<div>
    @if (Model.Stories.Count <= 0)
    {
        <h3>No stories found</h3>
    }
    else
    {
        foreach (var story in Model.Stories)
        {
            <partial name="Shared/Cards/_StoryCard" model="@story"/>
        }
        
        <partial name="_Pagination" model="Model.Pagination"/>
    }
</div>