@page "/club/thread/{id:long}/delete"
@model DeleteModel

@{
	ViewData["Title"] = "Delete";
}

<h2>@Model.ClubThread.Title</h2>

<div>
	<h3>Are you sure you want to delete this thread?</h3>
	<hr/>
	<dl class="rows">
		<dt>
			Creation Date
		</dt>
		<dd>
			@Model.ClubThread.CreationDate
		</dd>
		<dt>
			Replies
		</dt>
		<dd>
			@Model.ClubThread.Replies
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="ClubThread.Id"/>
		<div class="button-group">
			<input type="submit" value="Delete" class="btn red"/>
			<a asp-page="./Details"
			   class="btn"
			   asp-route-clubId="@Model.ClubThread.ClubId"
			   asp-route-threadId="@Model.ClubThread.Id">
				Cancel
			</a>
		</div>
	</form>
</div>