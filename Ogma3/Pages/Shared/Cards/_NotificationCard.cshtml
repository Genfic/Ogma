@using Utils.Extensions
@model Ogma3.Data.Notifications.Notification

<div class="notification active-border">
	<a class="link" href="@Model.Url">@Model.Body</a>

	<time-display
		class="time"
		utc-date="Model.DateTime"
		formatter="d => d.FormatDateWithDaySuffix()">
	</time-display>

	<div class="actions">
		<button class="action-btn large" data-delete="@Model.Id" title="Delete">
			<icon icon="lucide:trash-2"></icon>
		</button>
	</div>

</div>