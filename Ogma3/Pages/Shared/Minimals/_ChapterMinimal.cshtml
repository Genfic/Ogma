@using Utils.Extensions
@model ChapterMinimal

<a asp-page="/Chapter" asp-route-sid="@Model.StoryId" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="minimal active-border">
	<span class="title">@Model.Title</span>

	<div class="info">
		<span class="author">By @Model.StoryAuthorUserName</span>

		<i class="dot"></i>

		@if (Model.PublicationDate is { } date)
		{
			<time-display
				class="date"
				utc-date="date"
				formatter="d => d.FormatDateWithDaySuffix()">
			</time-display>
		}

		<i class="dot"></i>

		<span class="story">Story: @Model.StoryTitle</span>
	</div>
</a>