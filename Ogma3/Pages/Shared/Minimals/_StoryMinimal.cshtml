@using Utils.Extensions
@model StoryMinimal

<a asp-page="/Story" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="minimal active-border">

	<span class="title">@Model.Title</span>

	<div class="info">

		<span class="author">By @Model.AuthorUserName</span>

		<i class="dot"></i>

		@if (Model.PublicationDate is {} date)
		{
			<time-display
				class="date"
				utc-date="date"
				formatter="d => d.FormatDateWithDaySuffix()">
			</time-display>
		}
	</div>
</a>