{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noInferrableTypes": "off",
				"useEnumInitializers": "off"
			},
			"nursery": {
				"useAwait": "error"
			},
			"suspicious": {
				"noRedundantUseStrict": "off",
				"noAssignInExpressions": "off"
			}
		}
	},
	"files": {
		"include": ["wwwroot/js/src*/*.js", "wwwroot/js/src*/*.ts", "*.mjs"]
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "crlf"
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
